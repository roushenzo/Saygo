<h3>Поиск</h3>
<%= form_tag search_path, :method => :get do %>
    <div class="form-search clear">
        <div class="search-button-menu fleft">
            <ul class="search-button">
                <% Category.for_search_bar.each do |c| %>
                    <li>
                        <%= link_to "<span>#{c.name}</span>".html_safe, 'javascript:void(0);' %>
                        <%= hidden_field_tag :category_id, c.slug, :disabled => true %>
                    </li>
                <% end %>
            </ul>
        </div>
        <div class="search-content fleft">
             <div class="row-form clear">
                <div class="row-form-left fleft">Страна:</div>
                <div class="row-form-right fleft">
                    <%= select_tag :country_id,
                        options_from_collection_for_select(Country.all, :slug, :name), :prompt => 'Выберите страну' %>
                </div>
             </div>
             <div class="row-form clear">
                <div class="row-form-left fleft">Город:</div>
                <div class="row-form-right fleft">
                    <%= select_tag :city_id, [], :prompt => 'Выберите город' %>
                </div>
             </div>
             <div class="row-form clear">
                <div class="row-form-left fleft">Название:</div>
                <div class="row-form-right fleft">
                    <%= text_field_tag :title %>
                </div>
             </div>
             <input type="submit" name="send"value="&nbsp;" onfocus="this.blur()" class="button-submit">
        </div>
    </div>
<% end %>
