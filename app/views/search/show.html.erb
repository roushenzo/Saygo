<%= form_for @page, :url => search_path, :method => :get do |f| %>
  <div class="box-search clear">
      <div class="box-search-title clear">
          <ul class="list0">
              <% @search_categories.each do |c| %>
                  <li>
                      <%= link_to c.name, 'javascript:void(0);', :class => ('active' if c.id == @selected_category.try(:id)) %>
                      <%= hidden_field_tag :category_id, c.slug, :disabled => true %>
                  </li>
              <% end %>
          </ul>
      </div>
      <div class="box-search-content">
          <div class="row1 clear">
              <div class="row1-col-3 label fleft">Страна:</div>
              <div class="row1-col-4 fleft">
                  <%= f.collection_select :country_id, Country.all, :slug, :name,
                            {:include_blank => 'Выберите страну', :selected => @selected_country.try(:slug)} %>
              </div>
              <div class="row1-col-5 label fleft">Город:</div>
              <div class="row1-col-6 fleft">
                <%= f.collection_select :city_id, @selected_country.try(:cities) || [], :slug, :name,
                    {:include_blank => 'Выберите город', :selected => @selected_city.try(:slug)} %>
              </div>
              <div class="row1-col-7 label fleft">Название:</div>
              <div class="row1-col-6 fleft"><%= f.text_field :title %></div>
          </div>
          <div class="row2 clear">
              <div class="row2-col-1 fleft"><input type="submit" name="send" value="&nbsp;" onfocus="this.blur()" class="button-submit2"></div>
              <div class="row2-col-2 fleft">Найдено 101 достопримечательность</div>
              <div class="row2-col-3 fleft">
                  Сортировать по:
                  <input type="radio" name="1" checked="checked">Рейтингу
                  <input type="radio" name="2">Назанию
              </div>
          </div>
      </div>
  </div>
<% end %>
